<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="0"
           android:layout_row="0"
           android:text="Namaste"
           android:background="@drawable/custombutton"
           android:id="@+id/namaste"
           android:onClick="buttontapped"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="1"
           android:layout_row="0"
           android:background="@drawable/custombutton"
           android:text="Beautiful"
           android:onClick="buttontapped"
           android:id="@+id/sunder"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="0"
           android:layout_row="1"
           android:onClick="buttontapped"
           android:text="Thanks"
           android:background="@drawable/custombutton"
           android:id="@+id/thanks"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="1"
           android:layout_row="1"
           android:background="@drawable/custombutton"
           android:text="Sorry"
           android:onClick="buttontapped"
           android:id="@+id/sorry"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="0"
           android:layout_row="2"
           android:onClick="buttontapped"
           android:background="@drawable/custombutton"
           android:text="Nice work"
           android:id="@+id/itsgood"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="1"
           android:layout_row="2"
           android:background="@drawable/custombutton"
           android:text="I like it"
           android:id="@+id/ilikeit"
           android:onClick="buttontapped"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="0"
           android:layout_row="3"
           android:text="Bring the bill"
           android:id="@+id/bringbill"
           android:background="@drawable/custombutton"
           android:onClick="buttontapped"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_column="1"
           android:layout_row="3"
           android:text="tell me the cost"
           android:id="@+id/howmany"
           android:background="@drawable/custombutton"
           android:onClick="buttontapped"
           android:layout_gravity="fill"
           android:layout_columnWeight="1"
           android:layout_rowWeight="1" />














   </GridLayout>

</android.support.constraint.ConstraintLayout>